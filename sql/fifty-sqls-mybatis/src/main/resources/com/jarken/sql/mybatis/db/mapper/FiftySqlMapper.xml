<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jarken.sql.mybatis.db.mapper.FiftySqlMapper">
    <resultMap id="courseAndTeacherResult" type="com.jarken.sql.mybatis.db.entity.map.CourseAndTeacher">
        <result property="cId" column="c_id"/>
        <result property="cName" column="c_name"/>
        <association property="teacher" column="t_id" javaType="com.jarken.sql.mybatis.db.entity.Teacher" resultMap="teacherResult"/>
    </resultMap>
    
    <resultMap id="teacherResult" type="com.jarken.sql.mybatis.db.entity.Teacher">
        <result property="tId" column="t_id"/>
        <result property="tName" column="t_name"/>
    </resultMap>

    <select id="selectCourseAndTeacher"
            resultMap="courseAndTeacherResult"
            resultType="list">
        select c.c_id, c.c_name, t.t_id, t.t_name
        from course c left join teacher t
        on c.t_id = t.t_id
    </select>
</mapper>